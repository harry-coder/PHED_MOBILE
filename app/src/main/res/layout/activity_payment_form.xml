<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_mlarge">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/debtprofile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="Debts as at 12/13/2019"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_80"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_xsmall" />


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Customer Information"-->
                <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"-->
                <!--android:textColor="@color/grey_40" />-->

                <!--<TextView-->
                <!--android:id="@+id/AccountDetails"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="36dp"-->
                <!--android:layout_marginTop="@dimen/spacing_medium"-->
                <!--android:text="₦ 0"-->
                <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"-->
                <!--android:textColor="@color/grey_80"-->
                <!--android:textSize="15dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AccountDetails2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="₦ 0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrears"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/arrears"
                    android:layout_width="337dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="₦ 0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="15dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Debts"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/CurrentDebts"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="₦ 0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:id="@+id/sparkMeter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spark Meter Balance"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sparkMeter2"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="15dp" />



                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Debts due today"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/debtsduetoday"
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="₦ 0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/red_300"
                    android:textSize="15dp" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

















    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_mlarge">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/debstsdd"
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text="Input Amount"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/blue_600"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/debtsdd"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text=""
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/red_300"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="₦"

                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inpuamt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginRight="-4dp"
                        android:hint="Please input amount to pay"
                        android:inputType="number"
                        android:maxLength="19"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="@color/blue_grey_800"
                        android:textColorHint="@color/grey_10"
                        android:theme="@style/EditText.GreySoft"
                        android:layout_weight="1"
                        />



                </LinearLayout>






                <View
                    android:id="@+id/debtsdd"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:text=""
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/red_300"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/paybill"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginRight="-4dp"
                    android:background="@drawable/btn_rounded_primary"
                    android:text="Proceed"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>


</LinearLayout>